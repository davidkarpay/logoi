# HuggingFace API Configuration
# Copy this file to .env and fill in your actual values

# Your HuggingFace API Key
# Get one at: https://huggingface.co/settings/tokens
# Format: hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HF_API_KEY=your_huggingface_api_key_here

# Encryption Configuration
# Set to 'true' to use encrypted storage
USE_ENCRYPTION=true

# Optional: Pre-encrypted API key
# If you've already encrypted your key, paste it here
# Generate using encrypt-key.html helper tool
ENCRYPTED_API_KEY=

# Security Settings
# Enable additional security features
ENABLE_KEY_VALIDATION=true
ALLOW_KEY_STORAGE=true

# Development Mode
# Set to 'true' to enable debug logging (WARNING: may expose sensitive info)
DEBUG_MODE=false
